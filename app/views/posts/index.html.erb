<h1>Listing posts</h1>

<table>
  <tr>
    <th>Short url</th>
    <th>Note</th>
    <th>Redirect</th>
  </tr>

<% for post in @posts %>
  <tr>
    <td><%=h post.short_url %></td>
    <td><%=h post.note %></td>
    <td><%=h post.redirect %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>
